# AI Lead Gen Pro Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_lead_gen_pro

# Supabase Configuration
SUPABASE_URL=your-project-url
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_ANON_KEY=your-anon-key

# Default Configuration
DEFAULT_CLIENT_ID=your-default-client-uuid

# Redis Configuration (Optional - uses in-memory cache if not set)
# REDIS_URL=redis://localhost:6379

# Authentication
API_TOKEN=your-bearer-token
JWT_SECRET=your-secure-jwt-secret-here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Email Configuration
EMAIL_FROM=noreply@example.com
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password

# External API Keys for Data Collection
NEWS_API_KEY=your-newsapi-key-here
SERP_API_KEY=your-serpapi-key-here
BUILTWITH_API_KEY=your-builtwith-key-here
SAM_GOV_API_KEY=your-sam-gov-api-key-here

# LLM Configuration
# Provider options: local, openai, anthropic
LLM_PROVIDER=local

# For local LLM (OSS 120B)
LOCAL_LLM_ENDPOINT=http://localhost:11434/v1
LOCAL_LLM_MODEL=oss-120b

# For OpenAI (if using)
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4

# For Anthropic (if using)
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Scraping Configuration
USE_REAL_SCRAPING=true
PLAYWRIGHT_TIMEOUT=30000
MAX_CONCURRENT_BROWSERS=3

# Rate Limiting
DAILY_RESEARCH_CAP_PER_TENANT=50
MAX_CONCURRENT_RESEARCH_JOBS=3
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Vercel Settings (for deployment)
VERCEL_URL=

# Feature Flags
ENABLE_CACHE=true
ENABLE_MOCK_MODE=false
ENABLE_LLM_SYNTHESIS=true